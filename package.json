{
  "version": "1.0.0",
  "license": "MIT",
  "name": "lycy",
  "description": "Uzbek to Cyrillic transliterator",
  "author": "OgabekYuldoshev <https://github.com/OgabekYuldoshev>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "https://github.com/OgabekYuldoshev/lycy",
  "bugs": {
    "url": "https://github.com/OgabekYuldoshev/lycy/issues"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "keywords": [
    "uzbek",
    "cyrillic",
    "latin",
    "transliteration",
    "transliterator",
    "convert",
    "converter",
    "translation",
    "uzbekistan",
    "i18n",
    "internationalization",
    "localization",
    "alphabet",
    "kirill",
    "lotin",
    "o'zbek",
    "uzbekcha",
    "typescript",
    "javascript",
    "text-processing",
    "text-converter",
    "string-manipulation"
  ],
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/lycy.esm.js",
  "size-limit": [
    {
      "path": "dist/lycy.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/lycy.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "husky": "^9.1.7",
    "size-limit": "^11.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
